# SW-MCP Environment Variables

# Database
SW_MCP_DB_URL=sqlite:///sw_mcp.db
# For PostgreSQL (if using Docker):
# SW_MCP_DB_URL=postgresql+psycopg2://user:password@localhost:5432/sw_mcp

# HTTP Rate Limiting
SW_MCP_HTTP_RPS=2

# Scheduler (optional)
SW_MCP_ENABLE_SCHEDULER=0
SW_MCP_SCHEDULE_HOUR=4
SW_MCP_TIMEZONE=Asia/Seoul

# MCP Server
MCP_SERVER_PORT=8001
MCP_SERVER_HOST=localhost
